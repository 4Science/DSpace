<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">

    <bean class="org.dspace.layout.service.impl.CrisLayoutSectionServiceImpl" >
        <property name="components">
            <list>
                <ref bean="sectionfonds" />
                <ref bean="sectionjournalfonds" />
                <ref bean="sectionaggregations" />
                <ref bean="sectiondocuments" />
                <ref bean="sectionsite" />
            </list>
        </property>
    </bean>

    <bean class="org.dspace.layout.CrisLayoutSection" id="sectionfonds">
        <constructor-arg name="id" value="sectionfonds"/>
        <constructor-arg name="visible" value="true"/>
        <constructor-arg name="sectionComponents">
          <list>
             <list>
                 <bean class="org.dspace.layout.CrisLayoutBrowseComponent">
                     <property name="browseNames">
                         <list>
                             <value>titleF</value>
                             <value>typeF</value>
                             <value>dateissuedF</value>
                         </list>
                     </property>
                     <property name="style" value="col-md-4"/>
                 </bean>
                 <bean class="org.dspace.layout.CrisLayoutSearchComponent">
                     <property name="discoveryConfigurationName" value="fonds" />
                     <property name="style" value="col-md-8"/>
                 </bean>
             </list>
             <list>
                 <bean class="org.dspace.layout.CrisLayoutFacetComponent">
                     <property name="discoveryConfigurationName" value="fonds" />
                     <property name="style" value="col-md-12"/>
                 </bean>
             </list>
          </list>
        </constructor-arg>
    </bean>

    <bean class="org.dspace.layout.CrisLayoutSection" id="sectionjournalfonds">
        <constructor-arg name="id" value="sectionjournalfonds"/>
        <constructor-arg name="visible" value="true"/>
        <constructor-arg name="sectionComponents">
          <list>
             <list>
                 <bean class="org.dspace.layout.CrisLayoutBrowseComponent">
                     <property name="browseNames">
                         <list>
                             <value>titleJF</value>
                             <value>typeJF</value>
                             <value>dateissuedJF</value>
                         </list>
                     </property>
                     <property name="style" value="col-md-4"/>
                 </bean>
                 <bean class="org.dspace.layout.CrisLayoutSearchComponent">
                     <property name="discoveryConfigurationName" value="journalfonds" />
                     <property name="style" value="col-md-8"/>
                 </bean>
             </list>
             <list>
                 <bean class="org.dspace.layout.CrisLayoutFacetComponent">
                     <property name="discoveryConfigurationName" value="journalfonds" />
                     <property name="style" value="col-md-12"/>
                 </bean>
             </list>
          </list>
        </constructor-arg>
    </bean>

    <bean class="org.dspace.layout.CrisLayoutSection" id="sectionaggregations">
        <constructor-arg name="id" value="sectionaggregations"/>
        <constructor-arg name="visible" value="true"/>
        <constructor-arg name="sectionComponents">
          <list>
             <list>
                 <bean class="org.dspace.layout.CrisLayoutBrowseComponent">
                     <property name="browseNames">
                         <list>
                             <value>titleA</value>
                             <value>typeA</value>
                             <value>parentA</value>
                         </list>
                     </property>
                     <property name="style" value="col-md-4"/>
                 </bean>
                 <bean class="org.dspace.layout.CrisLayoutSearchComponent">
                     <property name="discoveryConfigurationName" value="aggregations" />
                     <property name="style" value="col-md-8"/>
                 </bean>
             </list>
             <list>
                 <bean class="org.dspace.layout.CrisLayoutFacetComponent">
                     <property name="discoveryConfigurationName" value="aggregations" />
                     <property name="style" value="col-md-12"/>
                 </bean>
             </list>
          </list>
        </constructor-arg>
    </bean>

    <bean class="org.dspace.layout.CrisLayoutSection" id="sectiondocuments">
        <constructor-arg name="id" value="sectiondocuments"/>
        <constructor-arg name="visible" value="true"/>
        <constructor-arg name="sectionComponents">
          <list>
             <list>
                 <bean class="org.dspace.layout.CrisLayoutBrowseComponent">
                     <property name="browseNames">
                         <list>
                             <value>author</value>
                                <value>rsoTitle</value>
                             <value>type</value>
                             <value>dateissued</value>
                             <value>subject</value>
                         </list>
                     </property>
                     <property name="style" value="col-md-4"/>
                 </bean>
                 <bean class="org.dspace.layout.CrisLayoutSearchComponent">
                     <property name="discoveryConfigurationName" value="documents" />
                     <property name="style" value="col-md-8"/>
                 </bean>
             </list>
             <list>
                 <bean class="org.dspace.layout.CrisLayoutFacetComponent">
                     <property name="discoveryConfigurationName" value="documents" />
                     <property name="style" value="col-md-12"/>
                 </bean>
             </list>
             <list>
                 <bean class="org.dspace.layout.CrisLayoutTopComponent">
                     <property name="discoveryConfigurationName" value="documents" />
                     <property name="sortField" value="dc.date.accessioned" />
                     <property name="order" value="desc" />
                     <property name="style" value="col-md-12"/>
                     <property name="numberOfItems" value="4"/>
                     <property name="showAsCard" value="false"/>
                     <property name="showLayoutSwitch" value="false"/>
                     <property name="defaultLayoutMode" value="LIST"/>
                     <property name="cardStyle" value=""/>
                     <property name="cardColumnStyle" value="col-12 col-lg-6"/>
                     <property name="itemListStyle" value=""/>
                     <property name="showAllResults" value="true"/>
                     <property name="template" value="IMAGES"/>
                 </bean>
                 <bean class="org.dspace.layout.CrisLayoutTopComponent">
                     <property name="discoveryConfigurationName" value="documents" />
                     <property name="sortField" value="metric.view" />
                     <property name="order" value="desc" />
                     <property name="style" value="col-md-12"/>
                     <property name="numberOfItems" value="4"/>
                     <property name="showAsCard" value="false"/>
                     <property name="showLayoutSwitch" value="false"/>
                     <property name="defaultLayoutMode" value="LIST"/>
                     <property name="cardStyle" value=""/>
                     <property name="cardColumnStyle" value="col-12 col-lg-6"/>
                     <property name="itemListStyle" value=""/>
                     <property name="showAllResults" value="true"/>
                     <property name="template" value="IMAGES"/>
                 </bean>
             </list>
          </list>

        </constructor-arg>
    </bean>
    <bean class="org.dspace.layout.CrisLayoutSection" id="sectionsite">
        <constructor-arg name="id" value="site"/>
        <constructor-arg name="visible" value="false"/>
        <constructor-arg name="sectionComponents">
          <list>
            <list>
                <bean class="org.dspace.layout.CrisLayoutTextRowComponent">
                    <property name="contentType" value="text-metadata"/>
                    <property name="content" value="cms.homepage.header"/>
                    <property name="style" value="style"/>
                </bean>
            </list>
            <list>
                <bean class="org.dspace.layout.CrisLayoutCarouselComponent">
                    <property name="discoveryConfigurationName" value="news" />
                    <property name="style" value="col-12 px-0" />
                    <property name="title" value="dc.title" />
                    <property name="bundle" value="BRANDED_PREVIEW" />
				    <property name="link" value="cris.news.url" />
                    <property name="description" value="dc.description.abstract" />
                    <property name="sortField" value="cris.priority" />
                    <property name="order" value="asc" />
                    <property name="targetBlank" value="true" />
                    <property name="fitWidth" value="false" />
                    <property name="fitHeight" value="false" />
                    <property name="showBlurryBackdrop" value="true" />
                    <property name="keepAspectRatio" value="false" />
                    <property name="carouselHeightPx" value="500" />
                    <property name="captionStyle" value="text-justify" />
                    <property name="titleStyle" value="text-center" />
                </bean>
            </list>
            <list>
                <bean class="org.dspace.layout.CrisLayoutTextRowComponent">
                    <property name="contentType" value="text-metadata"/>
                    <property name="content" value="counter.header"/>
                    <property name="style" value="py-3 col-12 col-md-5"/>
                </bean>
                <bean class="org.dspace.layout.CrisLayoutCountersComponent">
                    <property name="style" value="py-3 col-12 col-md-7"/>
                    <property name="counterSettingsList">
                        <list>
                            <bean class="org.dspace.layout.CrisLayoutCountersComponent.CounterSettings">
                                <property name="discoveryConfigurationName" value="fonds"/>
                                <property name="label" value="fonds"/>
                                <property name="icon" value="fas fa-archive fa-3x"/>
                                <property name="link" value="/explore/sectionfonds" />
                            </bean>
                            <bean class="org.dspace.layout.CrisLayoutCountersComponent.CounterSettings">
                                <property name="discoveryConfigurationName" value="journalfonds"/>
                                <property name="label" value="journalfonds"/>
                                <property name="icon" value="fas fa-newspaper fa-3x"/>
                                <property name="link" value="/explore/sectionjournalfonds" />
                            </bean>
                            <bean class="org.dspace.layout.CrisLayoutCountersComponent.CounterSettings">
                                <property name="discoveryConfigurationName" value="aggregations"/>
                                <property name="label" value="aggregations"/>
                                <property name="icon" value="fas fa-folder-open fa-3x"/>
                                <property name="link" value="/explore/sectionaggregations" />
                            </bean>
                            <bean class="org.dspace.layout.CrisLayoutCountersComponent.CounterSettings">
                                <property name="discoveryConfigurationName" value="documents"/>
                                <property name="label" value="documents"/>
                                <property name="icon" value="fas fa-search fa-3x"/>
                                <property name="link" value="/explore/sectiondocuments" />
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
            <list>
                <bean class="org.dspace.layout.CrisLayoutAdvancedTopComponent">
                    <property name="discoveryConfigurationName">
                        <list>
                            <value>aggregationsHomePage</value>
                            <value>fondsHomePage</value>
                            <value>journalfondsHomePage</value>
                        </list>
                    </property>
                    <property name="sortField" value="cris.priority" />
                    <property name="order" value="asc" />
                    <property name="style" value="py-4"/>
                    <property name="numberOfItems" value="8"/>
                    <property name="showAsCard" value="true"/>
                    <property name="showLayoutSwitch" value="true"/>
                    <property name="defaultLayoutMode" value="CARD"/>
                    <property name="cardStyle" value=""/>
                    <property name="cardColumnStyle" value="col-6 col-lg-3"/>
                    <property name="itemListStyle" value=""/>
                    <property name="showAllResults" value="true"/>
                    <property name="template" value="SLIDER"/>
                </bean>
            </list>
            <list>
                <bean class="org.dspace.layout.CrisGridComponent">
                    <property name="discoveryConfigurationName" value="path"/>
                    <property name="style" value="py-4"/>
                    <property name="mainContentLink" value="/search?f.entityType=Path,equals&amp;spc.page=1&amp;view=grid"/>
                    <property name="sortField" value="cris.priority" />
                    <property name="order" value="asc" />
                </bean>
            </list>
