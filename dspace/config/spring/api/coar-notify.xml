<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">

    <bean class="org.dspace.coarnotify.SubmissionCOARNotifyServiceImpl"/>

    <bean class="org.dspace.coarnotify.COARNotifyConfigurationService">
        <property name="map">
            <map>
                <entry key="default">
                    <list>
                        <ref bean="coarnotifyreview"/>
                        <ref bean="coarnotifyendorsement"/>
                        <ref bean="coarnotifyingest" />
                    </list>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="coarnotifyreview" class="org.dspace.coarnotify.COARNotifyPattern">
        <property name="pattern" value="review"/>
    </bean>

    <bean id="coarnotifyendorsement" class="org.dspace.coarnotify.COARNotifyPattern">
        <property name="pattern" value="endorsement"/>
    </bean>

    <bean id="coarnotifyingest" class="org.dspace.coarnotify.COARNotifyPattern">
        <property name="pattern" value="ingest"/>
    </bean>

</beans>