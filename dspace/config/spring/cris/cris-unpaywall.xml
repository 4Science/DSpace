<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:webflow="http://www.springframework.org/schema/webflow-config"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	   http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">

	<bean id="org.dspace.app.cris.unpaywall.services.UnpaywallPersistenceService" parent="txProxyTemplateUnpaywall">
		<property name="target">
			<bean class="org.dspace.app.cris.unpaywall.services.UnpaywallPersistenceService"
				init-method="init">
				<property name="modelDaos">
					<map>
						<entry key="org.dspace.app.cris.unpaywall.model.Unpaywall">
							<ref bean="unpaywallDAO" />
						</entry>
					</map>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="unpaywallDAO"
		parent="abstractDao">
		<property name="proxyInterfaces">
			<value>org.dspace.app.cris.unpaywall.dao.UnpaywallDAO</value>
		</property>
		<property name="target">
			<bean parent="abstractDaoTarget">
				<constructor-arg>
					<value>org.dspace.app.cris.unpaywall.model.Unpaywall</value>
				</constructor-arg>
			</bean>
					</property>
	</bean>
	
	<bean id="txProxyTemplateUnpaywall" abstract="true"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager" ref="transactionManagerUnpaywall" />
		<property name="proxyTargetClass" value="true" />
		<property name="transactionAttributes">
			<props>
				<prop key="delete*">PROPAGATION_REQUIRED</prop>
				<prop key="save*">PROPAGATION_REQUIRED</prop>								
				<prop key="*">PROPAGATION_REQUIRED,readOnly</prop>
			</props>
		</property>
	</bean>
	
	<bean id="transactionManagerUnpaywall"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
   	
	<tx:annotation-driven transaction-manager="transactionManagerUnpaywall"/>
	
	<alias name="org.dspace.app.cris.unpaywall.services.UnpaywallPersistenceService" alias="org.dspace.app.cris.unpaywall.services.UnpaywallPersistenceService"/>
	
	<bean class="org.dspace.app.cris.unpaywall.UnpaywallService" name="UnpaywallService">
   	</bean>
   	
</beans>