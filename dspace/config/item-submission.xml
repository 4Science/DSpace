<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE item-submission SYSTEM "item-submission.dtd">

<item-submission>
  <submission-map>
    <name-map collection-handle="default" submission-name="MainWorkflow" />
  </submission-map>
  <step-definitions>
    <step-definition id="collection" mandatory="true">
      <heading>submit.progressbar.collection</heading>
      <processing-class>org.dspace.app.rest.submit.step.CollectionStep</processing-class>
      <type>collection</type>
      <scope visibility="hidden" visibilityOutside="hidden">submission</scope>
    </step-definition>
    <step-definition id="upload" mandatory="true">
      <heading>submit.progressbar.upload</heading>
      <processing-class>org.dspace.app.rest.submit.step.UploadStep</processing-class>
      <type>upload</type>
    </step-definition>
    <step-definition id="license" mandatory="true">
      <heading>submit.progressbar.license</heading>
      <processing-class>org.dspace.app.rest.submit.step.LicenseStep</processing-class>
      <type>license</type>
    </step-definition>
    <step-definition id="MainWorkflow" mandatory="true">
      <heading>submit.progressbar.describe.MainWorkflow</heading>
      <processing-class>org.dspace.app.rest.submit.step.DescribeStep</processing-class>
      <type>submission-form</type>
    </step-definition>
    <step-definition id="ETDWorkflow" mandatory="true">
      <heading>submit.progressbar.describe.ETDWorkflow</heading>
      <processing-class>org.dspace.app.rest.submit.step.DescribeStep</processing-class>
      <type>submission-form</type>
    </step-definition>
    <step-definition id="person" mandatory="true">
      <heading>submit.progressbar.describe.person</heading>
      <processing-class>org.dspace.app.rest.submit.step.DescribeStep</processing-class>
      <type>submission-form</type>
    </step-definition>
    <step-definition id="detect-duplicate" mandatory="true">
      <heading>submit.progressbar.detect-duplicate</heading>
      <processing-class>org.dspace.app.rest.submit.step.DetectPotentialDuplicateStep</processing-class>
      <type>detect-duplicate</type>
    </step-definition>
  </step-definitions>
  <submission-definitions>
    <submission-process name="MainWorkflow">
      <step id="collection" />
      <step id="MainWorkflow" />
      <step id="detect-duplicate" />
      <step id="upload" />
      <step id="license" />
    </submission-process>
    <submission-process name="MainWorkflow-edit">
      <step id="ETDWorkflow" />
      <step id="detect-duplicate" />
      <step id="upload" />
    </submission-process>
    <submission-process name="ETDWorkflow">
      <step id="collection" />
      <step id="ETDWorkflow" />
      <step id="detect-duplicate" />
      <step id="upload" />
      <step id="license" />
    </submission-process>
    <submission-process name="ETDWorkflow-edit">
      <step id="ETDWorkflow" />
      <step id="detect-duplicate" />
      <step id="upload" />
    </submission-process>
    <submission-process name="person">
      <step id="collection" />
      <step id="person" />
      <step id="detect-duplicate" />
      <step id="upload" />
      <step id="license" />
    </submission-process>
    <submission-process name="person-edit">
      <step id="person" />
      <step id="detect-duplicate" />
      <step id="upload" />
    </submission-process>
  </submission-definitions>
</item-submission>

